# Telegram Bot
BOT_TOKEN=

# Database
DB_NAME=supbot.db

# Working Hours (24-hour format)
WORK_HOURS_START=8
WORK_HOURS_END=22

# Weather API (OpenWeatherMap)
OPENWEATHER_KEY=your_openweather_api_key_here

# Telegram Payments
PAYMENTS_PROVIDER_TOKEN=your_payment_provider_token_here

# Card Payment Details (for manual payments)
PAYMENT_CARD_DETAILS=card_number_here

# Platform Commission (in percent)
PLATFORM_COMMISSION_PERCENT=10.0

# Review Channel ID (optional)
REVIEW_CHANNEL_ID=

# YooKassa Payment System
YK_SHOP_ID=your_yookassa_shop_id
YK_SECRET=your_yookassa_secret_key

# Admin IDs (comma-separated, e.g., "123456789,987654321")
ADMIN_IDS=your_admin_telegram_id_here

# Mini App URL (for Telegram Mini App)
MINIAPP_URL=https://your-domain.com/miniapp

# Flask Secret Key
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# Development Mode (true/false)
DEV_MODE=false

# Yandex Maps API Key (for Mini App maps)
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key
